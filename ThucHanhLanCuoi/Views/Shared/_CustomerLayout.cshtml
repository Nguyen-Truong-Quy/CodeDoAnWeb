<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Myshoes.vn</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }

        .Top-Header {
            background-color: #003b73;
            color: white;
            padding: 10px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .Logo {
            display: flex;
            align-items: center;
        }

            .Logo a {
                text-decoration: none;
                font-size: 24px;
                color: white;
                font-weight: bold;
            }

            .Logo .logo-vn {
                color: red;
                font-size: 18px;
                font-weight: bold;
                margin-left: 3px;
            }

        .ThanhTimKiem {
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 20px;
            overflow: hidden;
            width: 50%;
        }

            .ThanhTimKiem input {
                border: none;
                padding: 10px 15px;
                flex: 1;
                outline: none;
            }

            .ThanhTimKiem button {
                background: none;
                border: none;
                color: #003b73;
                padding: 0 15px;
                cursor: pointer;
            }

        .Menu-Top {
            display: flex;
            align-items: center;
            gap: 30px;
        }

            .Menu-Top a {
                text-decoration: none;
                color: white;
                font-size: 14px;
                display: flex;
                align-items: center;
            }

            .Menu-Top .account {
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .Menu-Top .account i {
                    font-size: 18px;
                }

                .Menu-Top .account .account-details {
                    display: flex;
                    flex-direction: column;
                }

                .Menu-Top .account .account-title {
                    font-weight: bold;
                   
                    font-size: 14px;
                }

                .Menu-Top .account .account-links {
                    color: black;
                    font-size: 12px;
                }

            .Menu-Top .store {
                position: relative;
            }

                .Menu-Top .store i {
                    font-size: 18px;
                }

                .Menu-Top .store .cart-count {
                    position: absolute;
                    top: -5px;
                    right: -10px;
                    background-color: red;
                    color: white;
                    font-size: 12px;
                    padding: 2px 6px;
                    border-radius: 50%;
                }

        .header-bottom {
            background-color: #003b73;
            padding: 10px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .MucLucGiay {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .MucLucGiay li {
                display: flex;
                align-items: center;
                gap: 5px;
            }

            .MucLucGiay a {
                text-decoration: none;
                color: white;
                font-size: 14px;
            }

        .label.new {
            background-color: #4caf50;
            color: white;
            padding: 2px 6px;
            font-size: 12px;
            border-radius: 5px;
        }

        .label.sale {
            background-color: #e53935;
            color: white;
            padding: 2px 6px;
            font-size: 12px;
            border-radius: 5px;
        }

        .icon-sale {
            background-color: #e53935;
            color: white;
            padding: 2px 6px;
            font-size: 12px;
            border-radius: 50%;
        }

        .Right-Menu {
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .Right-Menu a {
                text-decoration: none;
                color: white;
                display: flex;
                align-items: center;
                gap: 5px;
            }

        .account {
            display: flex;
            align-items: center;
            gap: 10px;
            position: relative; /* Add position relative for the account box */
        }

        .accountBox {
            display: none; /* Hide by default */
            position: absolute;
            top: 100%; /* Push the menu below the account */
            left: 0;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
            width: 100px;
        }

        .account:hover .accountBox {
            display: block; /* Show account box when hovering over the account section */
        }

        .accountBox .account-title {
            font-weight: bold;
            margin-bottom: 10px;
            color:black;
        }

        .accountBox .account-links {
            color: black;
            text-decoration: none;
            display: block;
            margin: 5px 0;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <!-- Top Header -->
    <header class="Top-Header">
        <div class="Logo">
            <a href="@Url.Action("TrangChu_Customer", "CustomerHome")">
                Myshoes<span class="logo-vn">.vn</span>
            </a>
        </div>

        <div class="ThanhTimKiem">
            <input type="text" placeholder="Tìm kiếm sản phẩm..." />
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>   
        </div>

        <div class="Menu-Top">
            <div class="account">
                <i class="fas fa-user"></i>
                <div class="account-details">
                    <span class="account-title">Tài khoản</span>
                    <span class="account-links" style="color: white;">Đăng nhập - Đăng ký</span>
                </div>
                <div class="accountBox">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("TrangTaiKhoan", "Account")" class="account-title">Tài khoản</a>
                        <a href="@Url.Action("Logout", "Account")" class="account-links">Đăng xuất</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="account-links">Đăng nhập</a>
                        <a href="@Url.Action("Register", "Account")" class="account-links">Đăng ký</a>
                    }
                </div>
            </div>
            <a href="@Url.Action("Cart", "Store")" class="store">
                <i class="fas fa-shopping-cart"></i>
                <span class="cart-count">0</span>
            </a>
        </div>
    </header>

    <!-- Bottom Header -->
    <div class="header-bottom">
        <ul class="MucLucGiay">
            <li><a href="@Url.Action("TrangNike", "Home", new { brand = "Nike" })">Giày Nike</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangAdidas", "Home", new { brand = "Adidas" })">Giày Adidas</a> <span class="label sale">Sale</span></li>
            <li><a href="@Url.Action("TrangLacoste", "Home", new { brand = "Lacoste" })">Giày Lacoste</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangPuma", "Home", new { brand = "Puma" })">Giày Puma</a> <span class="label sale">Sale</span></li>
            <li><a href="@Url.Action("TrangAsics", "Home", new { brand = "Asics" })">Giày Asics</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangGiayTheThao", "Home", new { category = "Sports" })">Giày Thể Thao</a></li>
            <li><a href="@Url.Action("TrangSale", "Home", new { sale = true })">Sale</a> <span class="icon-sale">%</span></li>
        </ul>
        <div class="Right-Menu">
            <a href="@Url.Action("LienHe", "Home")"><i class="fas fa-envelope"></i> Liên Hệ</a>
            <a href="@Url.Action("TrangBlog", "Home")"><i class="fas fa-pen"></i> Blog</a>
        </div>
    </div>

    @RenderBody()
</body>
@Html.Partial("_Footer")
</html>
